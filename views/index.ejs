<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
</head>
<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: "gilroy";
  }

  html,
  body {
    width: 100%;
    height: 100%;
  }

  #main {
    width: 100%;
    height: 100%;
    display: flex;
    position: relative;
    background-image: url(https://static.vecteezy.com/system/resources/previews/009/948/963/original/aesthetic-minimal-purple-wallpaper-illustration-perfect-for-wallpaper-backdrop-postcard-background-for-your-design-vector.jpg);
  }

  #box {
    width: 400px;
    height: 500px;
    border: 2px solid white;
    border-radius: 50px;
    display: flex;
    align-items: center;
    justify-content: space-evenly;
    flex-direction: column;
    position: absolute;
    top: 60%;
    left: 60%;
    transform: translate(-50%, -50%);
  }

  form {
    display: flex;
    align-items: center;
    justify-content: space-evenly;
    flex-direction: column;
    gap: 50px;
  }

  .style {
    padding: 10px 20px;
    border: none;
    border-radius: 50px;
  }

  #login {
    font-size: 40px;
    font-weight: 800;
    color: rgb(255, 255, 255);
  }

  #submit {
    width: 100%;
    padding: 10px 20px;
    border: none;
    background-color: rgb(202, 150, 232);
    border-radius: 50px;
    color: white;
    font-size: 17px;
  }

  #main>img {
    width: 30%;
    height: 55%;
  }

  #text {
    position: absolute;
    bottom: 25%;
    left: 20%;
    text-align: right;
  }

  #text h1 {
    font-size: 70px;
    color: white;
  }

  #text h2 {
    font-size: 50px;
    color: rgb(202, 150, 232);
  }

  #register {
    /* text-decoration: none; */
    color: rgb(202, 150, 232);
    font-weight: 600;
    font-size: 18px;
  }

  #overflow {
    width: 100%;
    height: 100%;
    background-color: rgba(61, 5, 96, 0.744);
    position: absolute;
    top: 0;
    left: 0;
    display: none;
    align-items: center;
    justify-content: center;
    z-index: 1211;
  }

  #boxreg {
    width: 400px;
    height: 500px;
    border: 2px solid white;
    border-radius: 50px;
    display: flex;
    align-items: center;
    justify-content: space-evenly;
    flex-direction: column;

  }
</style>

<body>
  <div id="main">
    <img src="/images/icon.png" alt="">
    <div id="text">
      <h1>CHATTER</h1>
      <h2>chatter</h2>
    </div>
    <div id="box">
      <h1 id="login">LOGIN</h1>
      <form action="/login">
        <input class="style" type="text" placeholder="username" name="username">
        <input class="style" type="password" placeholder="password" name="password">
        <input id="submit" type="submit" value="submit">
        <a href="" id="register">Register</a>
      </form>
    </div>
    <div id="overflow">
      <div id="boxreg">
        <h1 id="login">REGISTER</h1>
        <form action="/register" method="post">
          <input class="style" type="text" placeholder="username" name="username">
          <input class="style" type="password" placeholder="password" name="password">
          <input id="submit" type="submit" value="submit"
            style="color: white;background-color: rgb(185, 153, 203); font-weight: 700;">
          <a id="login" href="" style="color: white; font-weight: 700; font-size: 18px;">Login</a>
        </form>
      </div>
    </div>

  </div>
  <script>
    var reg = document.querySelector("#register")
    var overflow = document.querySelector("#overflow")
    reg.addEventListener("click", function (e) {
      e.preventDefault();
      overflow.style.display = "flex"
    }) 
    var reg = document.querySelector("#login")
    var overflow = document.querySelector("#overflow")
    reg.addEventListener("click", function (e) {
      overflow.style.display = "none"
    }) 

  </script>
</html>